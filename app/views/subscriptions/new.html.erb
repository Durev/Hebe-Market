<%= form_with model: @subscription do |f| %>
  <%= f.label :frequency %>
  <%= f.select :frequency, Subscription::FREQUENCIES %>
  <%= f.label :start_date %>
  <%= f.date_field :start_date %>
  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <ul>
    <%= f.fields_for :basket_subscriptions do |basket_subscriptions_form| %>
      <%= render "basket_subscription_fields", f: basket_subscriptions_form %>
    <% end %>

    <%= add_nested_fields_link(body: "Add baskets", form_builder_object: f, association: :basket_subscriptions) %>
  </ul>

  <%= f.submit "Create" %>
<% end %>
